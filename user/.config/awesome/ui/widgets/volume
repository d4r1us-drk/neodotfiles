#!/bin/bash
# Prints the current volume or ðŸ”‡ if muted.
[ "$(pamixer --get-mute)" = true ] && echo "ó°•¿x" && exit
vol="$(pamixer --get-volume)"
if [ "$vol" -gt "50" ]; then
    icon="ó°•¾"
elif [ "$vol" -gt "10" ]; then
    icon="ó°–€"
elif [ "$vol" -gt "0" ]; then
